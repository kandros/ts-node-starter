    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug main",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
            "args": [
                "--transpileOnly",
                "${workspaceRoot}/src/index.ts"
            ],
            "restart": true,
        }
    ]
}